<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.sunshine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.android.sunshine.activity.MainActivity"
            android:theme="@style/ForecastTheme"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.sunshine.activity.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.example.android.sunshine.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.sunshine.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.sunshine.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.android.sunshine.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.sunshine.activity.MainActivity" />
        </activity>

        <provider
            android:name=".data.WeatherProvider"
            android:authorities="com.example.android.sunshine"
            android:enabled="true"
            android:exported="true"
            android:permission="com.example.android.sunshine.LICENSE_TO_KILL"/>
    </application>

    <permission android:name="com.example.android.sunshine.LICENSE_TO_KILL"
        android:protectionLevel="dangerous"
        android:label="Licensed to Kill"/>

</manifest>